@model OnlineOtomasyon.Entities.Concrete.Personel
@{
    ViewBag.Title = "Ekle";
    string durum = null;
    if (@ViewBag.errorMessages == null)
    {
        durum = "invisible";
    }
    else
    {
        durum = "";
    }
}

<form class="mt-3" method="post" action="/Personel/Ekle" enctype="multipart/form-data">
    @Html.LabelFor(c => c.Ad)
    @Html.TextBoxFor(c => c.Ad, new { @class = "form-control w-75" })
    @Html.LabelFor(c => c.Soyad, new { @class = "mt-2" })
    @Html.TextBoxFor(c => c.Soyad, new { @class = "form-control w-75" })
    <div class="mt-2">
        <label>Personel Fotoğraf</label>
        <input type="file" id="dosya" name="dosya" value="dosya" class="form-control w-75" />
    </div>
    <div class="mt-2">
        <label>Departman</label>
        @Html.DropDownListFor(c => c.DepartmanId, (List<SelectListItem>)ViewBag.DepartmanListesi,new { @class="form-control w-75" })
    </div>
    <div class="mt-2">
        <button id="ekleBtn" type="submit" class="btn btn-primary">Ekle</button>
    </div>

</form>


<div class="alert alert-danger mt-2 @durum">
    <p class="text-danger">
        @ViewBag.errorMessages
    </p>
</div>


