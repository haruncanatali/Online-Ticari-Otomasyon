@model List<OnlineOtomasyon.Entities.Concrete.SatisHareket>
@{
    ViewBag.Title = "Index";
}

@if(Model.Count > 0)
{
    <table class="mt-3 table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Müşteri</th>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam Tutar</th>
                <th>Tarih</th>
                <th>Personel</th>
                <th>Veritabanı İşlemleri</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id.ToString()</td>
                    <td>@item.Musteri.Ad&nbsp;@item.Musteri.Soyad</td>
                    <td>@item.Urun.Ad</td>
                    <td>@item.Adet.ToString()</td>
                    <td>@item.Fiyat.ToString() &nbsp; &#8378;</td>
                    <td>@item.ToplamTutar.ToString() &nbsp; &#8378;</td>
                    <td>@item.Tarih.ToString()</td>
                    <td>@item.Personel.Ad&nbsp;@item.Personel.Soyad</td>
                    <td>
                        <a href="/SatisHareket/Ekle" class="btn btn-primary btn-sm w-20">Ekle</a>
                        <a href="/SatisHareket/Guncelle/@item.Id" class="btn btn-warning btn-sm w-20">Güncelle</a>
                        <a href="/SatisHareket/Sil/@item.Id" class="btn btn-danger btn-sm w-20">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert alert-danger">
        <h3 class="h3 text-danger">
            Sisteme kayıtlı satış bulunamadı.
        </h3>
        <a href="/SatisHareket/Ekle" class="btn btn-primary">Eklemek için tıkla!</a>
    </div>
}
