@model OnlineOtomasyon.Entities.Concrete.Departman
@{
    ViewBag.Title = "Ekle";
    string durum = null;
    if (@ViewBag.errorMessages == null)
    {
        durum = "invisible";
    }
    else
    {
        durum = "";
    }
}

<form action="/Departman/Ekle" method="post">
    <label for="departmanAd" class="form-label mt-4">Departman Adı</label>
    @Html.TextBoxFor(c => c.DepartmanAd, new { @class = "form-control", @id = "departmanAd" , @style = "width:900px;"})
    <button type="submit" class="btn btn-primary mt-3">Ekle</button>
</form>

<div class="alert alert-danger mt-2 @durum">
    <p class="text-danger">
        @ViewBag.errorMessages
    </p>
</div>