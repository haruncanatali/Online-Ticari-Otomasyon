@{ 
    string durum = Session["durum"] == null ? "giris" : "cikis";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Ozel.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <title>Online Ticari Otomasyon</title>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>

<body class="h-100">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand">Online Ticari Otomasyon Projesi</a>
            @if (durum == "giris")
            {
                <a href="/Login/Index" style="text-decoration:none;">Giriş Yap</a>
            }
            else if (durum == "cikis")
            {
                <a href="/Login/CikisYap" style="text-decoration:none;">Çıkış Yap</a>
            }
        </div>

    </nav>

    <div class="row">


        <div class="col-md-2 vh-100 stickey-top" style="background-color: #2d3436;">
            <ul class="list-group">
                <li class="list-group-item solMenu border-0"><a style="color:white; text-decoration:none;" href="/Home/Index"><i class="fas fa-home"></i><span style="margin-left:10px;">Anasayfa</span></a></li>
                <li class="list-group-item solMenu border-0"><a style="color:white; text-decoration:none;" class="solMenuLink" href="/Kategori/Index"><i class="fas fa-align-justify"></i><span style="margin-left:10px;">Kategori</span></a></li>
                <li class="list-group-item solMenu border-0"><a style="color:white; text-decoration:none;" class="solMenuLink" href="/Urun/Index"><i class="fas fa-database"></i><span style="margin-left:10px;">Ürün</span></a></li>
                <li class="list-group-item solMenu border-0"><a style="color:white; text-decoration:none;" class="solMenuLink" href="/Departman/Index"><i class="fas fa-user-md"></i><span style="margin-left:10px;">Departman</span></a></li>
                <li class="list-group-item solMenu border-0"><a style="color:white; text-decoration:none;" class="solMenuLink" href="/Musteri/Index"><i class="fas fa-users"></i><span style="margin-left:10px;">Müşteri</span></a></li>
                <li class="list-group-item solMenu border-0"><a style="color:white; text-decoration:none;" class="solMenuLink" href="/Personel/Index"><i class="fas fa-user-cog"></i><span style="margin-left:10px;">Personel</span></a></li>
                <li class="list-group-item solMenu border-0"><a style="color:white; text-decoration:none;" class="solMenuLink" href="/SatisHareket/Index"><i class="fas fa-money-bill"></i><span style="margin-left:10px;">Satışlar</span></a></li>
                <li class="list-group-item solMenu border-0"><a style="color:white; text-decoration:none;" class="solMenuLink" href="/Fatura/Index"><i class="fas fa-file-invoice-dollar"></i><span style="margin-left:10px;">Faturalar</span></a></li>
                <li class="list-group-item solMenu border-0"><a style="color:white; text-decoration:none;" class="solMenuLink" href="/Istatistik/Index"><i class="fas fa-chart-line"></i><span style="margin-left:10px;">İstatistikler</span></a></li>
            </ul>
        </div>

        <div class="col-md-10">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</body>
</html>