@model OnlineOtomasyon.Entities.Concrete.Kategori 
@{
    ViewBag.Title = "Guncelle";
}

<form action="/Kategori/Guncelle" method="post">
    <label for="kategoriAd" class="form-label mt-4">Kategori Adı</label>
    @Html.TextBoxFor(c => c.KategoriAdi, new { @class = "form-control", @id = "kategoriAd" })
    <button type="submit" class="btn btn-primary mt-3">Güncelle</button>

    @Html.TextBoxFor(c => c.Id, new { @class = "form-control invisible", @id = "kategoriId" })

</form>

