@model OnlineOtomasyon.Entities.Concrete.Admin
@{
    ViewBag.Title = "Index";

    string durum = "";

    if (ViewBag.errorMessages==null)
    {
        durum = "invisible";
    }
}

<form class="mt-1" action="/Login/GirisYap" method="post">
    <div class="d-flex justify-content-center">
        <img class="img-rounded mt-1" src="~/Content/Img/girisLogo.png" width="250" height="250" />
    </div>
    <div class="d-flex justify-content-center">
        @Html.TextBoxFor(c => c.KullaniciAdi, new { @class = "form-control mt-3", @style = "width:300px;", @placeholder = "Kullanıcı Adı" })
    </div>
    <div class="d-flex justify-content-center">
        @Html.PasswordFor(c => c.Sifre, new { @class = "form-control mt-3", @style = "width:300px;", @placeholder = "Şifre" })
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary mt-3" type="submit" style="width:100px;">Giriş Yap</button>
    </div>


</form>


<div class="alert alert-danger mt-3 @durum">
    <p class="text-danger">
        @ViewBag.errorMessages
    </p>
</div>
